{
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "insertPragma": false,
        "parser": "typescript",
        "proseWrap": "preserve",
        "requirePragma": false,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false,
        "printWidth": 80
      }
    },
    {
      "files": [".prettierrc"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.gql",
      "options": {
        "parser": "graphql"
      }
    }
  ]
}